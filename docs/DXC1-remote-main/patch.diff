+import React from 'react';
+import { MapStructure, DungeonRoom } from '../../../utils/mapStructure';
+import { Box, Circle, HelpCircle } from 'lucide-react';
+
+interface MapStructureSVGProps {
+  data: MapStructure;
+  onSelect?: (type: string, id: string, name: string) => void;
+}
+
+export const MapStructureSVG: React.FC<MapStructureSVGProps> = ({ data, onSelect }) => {
+  const { mapSize, rooms, doors, features } = data;
+
+  const getRoomPath = (room: DungeonRoom) => {
+    const { x, y, width, height, shape } = room;
+    if (shape === 'circular') {
+      const rx = width / 2;
+      const ry = height / 2;
+      return `M ${x + rx} ${y} a ${rx} ${ry} 0 1 0 0 ${height} a ${rx} ${ry} 0 1 0 0 -${height}`;
+    }
+    // Default rectangular
+    return `M ${x} ${y} h ${width} v ${height} h -${width} z`;
+  };
+
+  return (
+    <svg
+      width={mapSize.width}
+      height={mapSize.height}
+      viewBox={`0 0 ${mapSize.width} ${mapSize.height}`}
+      className="block bg-[#050505] select-none"
+    >
+      <defs>
+        <pattern id="dungeonGrid" width="20" height="20" patternUnits="userSpaceOnUse">
+          <path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255, 255, 255, 0.05)" strokeWidth="1" />
+        </pattern>
+        <filter id="glow-room">
+          <feGaussianBlur stdDeviation="2" result="coloredBlur" />
+          <feMerge>
+            <feMergeNode in="coloredBlur" />
+            <feMergeNode in="SourceGraphic" />
+          </feMerge>
+        </filter>
+      </defs>
+      
+      <rect width="100%" height="100%" fill="url(#dungeonGrid)" />
+
+      {/* Rooms Layer */}
+      <g className="rooms">
+        {rooms.map(room => (
+          <path
+            key={room.id}
+            d={getRoomPath(room)}
+            fill={room.color || "rgba(15, 23, 42, 0.9)"}
+            stroke="rgba(59, 130, 246, 0.3)"
+            strokeWidth="2"
+            className="transition-colors hover:fill-blue-900/50 cursor-pointer"
+            onClick={() => onSelect?.('room', room.id, room.name)}
+          />
+        ))}
+      </g>
+
+      {/* Doors Layer */}
+      <g className="doors">
+        {doors.map((door, idx) => {
+          const isHoriz = door.orientation === 'horizontal';
+          const w = isHoriz ? 20 : 6;
+          const h = isHoriz ? 6 : 20;
+          const cx = door.x - w / 2;
+          const cy = door.y - h / 2;
+          return (
+            <rect
+              key={`door-${idx}`}
+              x={cx}
+              y={cy}
+              width={w}
+              height={h}
+              fill={door.type === 'open' ? 'transparent' : '#d97706'}
+              stroke={door.type === 'open' ? '#64748b' : '#b45309'}
+              strokeWidth={door.type === 'open' ? 1 : 2}
+              strokeDasharray={door.type === 'open' ? '4 2' : undefined}
+            />
+          );
+        })}
+      </g>
+
+      {/* Features Layer */}
+      <g className="features">
+        {features.map((feat, idx) => (
+          <g 
+            key={`feat-${idx}`} 
+            transform={`translate(${feat.x}, ${feat.y})`}
+            className="cursor-help hover:opacity-80"
+            onClick={() => onSelect?.('feature', `feat-${idx}`, feat.type)}
+          >
+            <circle r="6" fill="rgba(6, 182, 212, 0.5)" stroke="#22d3ee" strokeWidth="1" />
+            {/* Simple icon representation */}
+            <rect x="-2" y="-2" width="4" height="4" fill="#cffafe" />
+          </g>
+        ))}
+      </g>
+    </svg>
+  );
+};
