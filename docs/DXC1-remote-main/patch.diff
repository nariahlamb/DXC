+export interface DungeonRoom {
+  id: string;
+  name: string;
+  type: 'entrance' | 'corridor' | 'room' | 'hall' | 'secret_room';
+  shape: 'rectangular' | 'circular' | 'irregular' | 'cave_blob';
+  x: number;
+  y: number;
+  width: number;
+  height: number;
+  description?: string;
+  color?: string;
+}
+
+export interface DungeonDoor {
+  x: number;
+  y: number;
+  type: 'open' | 'door' | 'secret_door' | 'barred';
+  orientation: 'horizontal' | 'vertical';
+  connects: string[];
+}
+
+export interface DungeonFeature {
+  x: number;
+  y: number;
+  type: string;
+  description?: string;
+}
+
+export interface MapStructure {
+  mapName: string;
+  mapSize: { width: number; height: number };
+  rooms: DungeonRoom[];
+  doors: DungeonDoor[];
+  features: DungeonFeature[];
+}
+
+export const parseMapStructure = (input: string | object | undefined | null): MapStructure | null => {
+  if (!input) return null;
+  try {
+      const data = typeof input === 'string' ? JSON.parse(input) : input;
+      if (data && data.mapSize && Array.isArray(data.rooms)) {
+          return data as MapStructure;
+      }
+  } catch (e) {
+      // Silent fail for invalid JSON
+  }
+  return null;
+};
